{
    "name": "hellohelm",
    "version": "0.1.0",
    "schemaVersion": "v1.0.0-WD",
    "invocationImages": [
        {
        "imageType": "docker",
        "image": "cnab/hellohelm:latest"
        }
    ],
    "images": {
        "alpine": {
            "description": "alpine",
            "image": "technosophos/demo2alpine:0.1.0",
            "imageType": "docker",
            "refs": [
                {
                    "path": "cnab/app/charts/alpine/values.yaml",
                    "field": "image.repository"
                }
            ]
        }
    },
    "parameters": {
        "port": {
            "defaultValue": 8080,
            "type": "int",
            "destination": {
                "env": "PORT"
            }
        }
    },
    "credentials": {
        "kubeconfig": {
            "path": "/root/.kube/config"
        }
    },
    "actions": {
        "status": {
            "modifies": false
        }
    }
}
