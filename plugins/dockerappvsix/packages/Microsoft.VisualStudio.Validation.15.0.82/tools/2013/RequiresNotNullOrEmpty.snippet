<?xml version="1.0" encoding="utf-8"?>
<CodeSnippet Format="1.0.0" xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <Header>
    <Title>Verifies that a string argument is not null or empty via a Requires method call.</Title>
    <Author>Microsoft</Author>
    <Shortcut>rnne</Shortcut>
    <Description>Checks an argument for a null value or zero length and throws a ArgumentNullException or ArgumentException if it is.</Description>
    <SnippetTypes>
      <SnippetType>Expansion</SnippetType>
    </SnippetTypes>
  </Header>
  <Snippet>
    <Declarations>
      <Literal>
        <ID>paramName</ID>
        <Default>paramName</Default>
      </Literal>
    </Declarations>
    <Code Language="CSharp">
      <![CDATA[Requires.NotNullOrEmpty($paramName$, "$paramName$");
      $end$]]>
    </Code>
    <Imports>
      <Import>
        <Namespace>Microsoft</Namespace>
      </Import>
    </Imports>
  </Snippet>
</CodeSnippet>
